<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AdminDetails">

    <LinearLayout
        android:id="@+id/linearlaylayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Details"
            android:textSize="35sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/TXTvwAdminName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/TXTvwAdminEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/TXTvwAdminPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone : "
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/btnAdminPassengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passenger Details"
            android:textColor="@color/white"
            android:backgroundTint="#3F51B5"
            android:layout_marginTop="75dp"
            android:layout_marginRight="75dp"
            android:layout_marginLeft="75dp"
            />
        <Button
            android:id="@+id/btnAdminDrivers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driver Details"
            android:textColor="@color/white"
            android:backgroundTint="#3F51B5"
            android:layout_marginTop="30dp"
            android:layout_marginRight="75dp"
            android:layout_marginLeft="75dp"
            />
    </LinearLayout>




</RelativeLayout>